<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3A509D"
    tools:context=".RegisterActivity">
    // for white background, use #E9ECEA

    <TextView
        android:id="@+id/haveAccountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="83dp"
        android:layout_marginEnd="2dp"
        android:text="Already have an account? "
        android:textAlignment="center"
        android:textColor="#E9ECEA"
        android:textColorLink="#2B3B3A"
        android:textStyle="normal"
        app:layout_constraintBaseline_toBaselineOf="@+id/signInText"
        app:layout_constraintEnd_toStartOf="@+id/signInText"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/signInText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="111dp"
        android:layout_marginBottom="40dp"
        android:onClick="sendToMain"
        android:text="Sign In"
        android:textColor="#EE6C4D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/haveAccountText" />

    <EditText
        android:id="@+id/getUsernameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="98dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#E9ECEA"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:textColor="#E9ECEA"
        android:textColorHint="#E9ECEA"
        app:layout_constraintBottom_toTopOf="@+id/getEmailText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sloganText" />

    <TextView
        android:id="@+id/projNameText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/pacifico"
        android:text="@string/cosign"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#EE6C4D"
        android:textColorLink="#2B3B3A"
        android:textSize="80sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/getEmailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="98dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#E9ECEA"
        android:ems="10"
        android:hint="Email Address"
        android:inputType="textPersonName"
        android:textColor="#E9ECEA"
        android:textColorHint="#E9ECEA"
        app:layout_constraintBottom_toTopOf="@+id/getPasswordText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/getUsernameText" />

    <TextView
        android:id="@+id/sloganText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="109dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="30dp"
        android:text="Get signing with CoSign!"
        android:textAlignment="center"
        android:textColor="#E9ECEA"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/getUsernameText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/projNameText2" />

    <EditText
        android:id="@+id/getPasswordText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="98dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="100dp"
        android:backgroundTint="#E9ECEA"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#E9ECEA"
        android:textColorHint="#E9ECEA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/getEmailText" />

    <Button
        android:id="@+id/registerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:onClick="onCreateClick"
        android:text="Register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reEnterText" />

    <EditText
        android:id="@+id/reEnterText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="98dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="100dp"
        android:backgroundTint="#E9ECEA"
        android:ems="10"
        android:hint="Re-enter password"
        android:inputType="textPassword"
        android:textColor="#E9ECEA"
        android:textColorHint="#E9ECEA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/getPasswordText" />

</androidx.constraintlayout.widget.ConstraintLayout>